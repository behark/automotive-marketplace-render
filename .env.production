# ==============================================
# PRODUCTION ENVIRONMENT VARIABLES FOR RENDER
# ==============================================
# Copy these variables to your Render environment variables section
# Replace all placeholder values with your actual production values

# ==============================================
# CORE REQUIRED VARIABLES (MUST BE SET)
# ==============================================

# Database - Use Render PostgreSQL service
DATABASE_URL="postgresql://username:password@host:port/database_name"
# Example: DATABASE_URL="postgresql://auto_user:your_password@dpg-abc123xyz-a.oregon-postgres.render.com:5432/auto_db"

# NextAuth Configuration - CRITICAL FOR SECURITY
NEXTAUTH_URL="https://your-app-name.onrender.com"
NEXTAUTH_SECRET="your-super-secure-random-string-here-use-openssl-rand-base64-32"
# Generate with: openssl rand -base64 32

# Node Environment
NODE_ENV="production"

# ==============================================
# PAYMENT PROCESSING (Required for revenue features)
# ==============================================

# Stripe - Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_live_your_live_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_live_your_live_publishable_key_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_live_publishable_key_here"

# ==============================================
# EMAIL SERVICES (Choose one - Required for notifications)
# ==============================================

# Option 1: SendGrid (Recommended)
SENDGRID_API_KEY="SG.your_sendgrid_api_key_here"
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="AutoMarket ShqipÃ«ria"

# Option 2: Resend (Alternative)
# RESEND_API_KEY="re_your_resend_api_key_here"

# ==============================================
# AI SERVICES (Required for AI features)
# ==============================================

# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your_openai_api_key_here"

# Hugging Face - Get from https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY="hf_your_huggingface_token_here"

# ==============================================
# AUTHENTICATION PROVIDERS (Optional but recommended)
# ==============================================

# Google OAuth - Get from https://console.developers.google.com
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# ==============================================
# SMS & WHATSAPP (Optional - for notifications)
# ==============================================

# SMS Service (Twilio, etc.)
SMS_API_KEY="your_sms_api_key"
SMS_FROM_NUMBER="+355123456789"

# WhatsApp Business API
WHATSAPP_BUSINESS_PHONE_ID="your_business_phone_id"
WHATSAPP_BUSINESS_ACCESS_TOKEN="your_access_token"
WHATSAPP_WEBHOOK_VERIFY_TOKEN="your_webhook_verify_token"

# ==============================================
# SECURITY & ENCRYPTION
# ==============================================

# Privacy encryption key - Generate with: openssl rand -base64 32
PRIVACY_ENCRYPTION_KEY="your_privacy_encryption_key_here"

# Internal API security
INTERNAL_API_KEY="your_internal_api_security_key"

# ==============================================
# PERFORMANCE & SCALING FEATURES
# ==============================================

# Feature flags - Start with all false, enable as needed
USE_REDIS="false"
USE_ELASTICSEARCH="false"
USE_S3="false"

# Limits
MAX_IMAGES_PER_LISTING="5"
LISTING_EXPIRY_DAYS="90"

# ==============================================
# FUTURE SCALING (Enable when ready)
# ==============================================

# Redis - Add when you have high traffic
# REDIS_URL="redis://username:password@host:port"

# AWS S3 - Add when you need more storage
# AWS_ACCESS_KEY_ID="your_aws_access_key"
# AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
# AWS_REGION="eu-central-1"
# AWS_BUCKET_NAME="automotive-images"

# Elasticsearch - Add when you have 500+ listings
# ELASTICSEARCH_URL="https://your_elasticsearch_url"
# ELASTICSEARCH_USERNAME="elastic"
# ELASTICSEARCH_PASSWORD="your_password"

# ==============================================
# ANALYTICS & MONITORING (Optional)
# ==============================================

# Google Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Sentry Error Tracking
# SENTRY_DSN="https://your_sentry_dsn"

# ==============================================
# RENDER SPECIFIC SETTINGS
# ==============================================

# Port (Render sets this automatically)
PORT="10000"

# Build command optimization
SKIP_ENV_VALIDATION="true"