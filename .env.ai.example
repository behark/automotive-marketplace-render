# AI Services Configuration for Albanian Automotive Marketplace

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Hugging Face Configuration (Optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# AI Processing Configuration
AI_PROCESSING_ENABLED=true
AI_BATCH_SIZE=50
AI_RETRY_ATTEMPTS=3
AI_TIMEOUT=30000

# AI Model Configuration
AI_PRICING_MODEL=gpt-4-turbo-preview
AI_CONTENT_MODEL=gpt-4-turbo-preview
AI_CHATBOT_MODEL=gpt-4-turbo-preview
AI_FRAUD_MODEL=gpt-4-turbo-preview

# Background Job Processing
AI_ENABLE_CRON_JOBS=true
AI_ENABLE_BATCH_PROCESSING=true

# Rate Limiting
AI_RATE_LIMIT_PER_MINUTE=100
AI_RATE_LIMIT_PER_HOUR=1000

# Feature Flags
AI_ENABLE_PRICING_ANALYSIS=true
AI_ENABLE_RECOMMENDATIONS=true
AI_ENABLE_FRAUD_DETECTION=true
AI_ENABLE_CONTENT_GENERATION=true
AI_ENABLE_PHOTO_ENHANCEMENT=true
AI_ENABLE_CHATBOT=true
AI_ENABLE_DEMAND_FORECASTING=true

# Albanian Market Configuration
AI_DEFAULT_CURRENCY=EUR
AI_DEFAULT_LANGUAGE=sq
AI_DEFAULT_REGION=TiranÃ«

# Performance Monitoring
AI_ENABLE_ANALYTICS=true
AI_LOG_LEVEL=info

# External Services (Optional)
AI_IMAGE_STORAGE_URL=https://your-cdn.com/images
AI_NOTIFICATION_WEBHOOK_URL=https://your-app.com/webhooks/ai-notifications

# Redis Configuration for AI Caching (Optional)
AI_REDIS_URL=redis://localhost:6379
AI_CACHE_TTL=3600

# Queue Configuration (Optional)
AI_QUEUE_REDIS_URL=redis://localhost:6379
AI_QUEUE_PREFIX=ai_jobs

# Security
AI_ENCRYPTION_KEY=your_32_character_encryption_key_here
AI_API_SECRET=your_api_secret_here