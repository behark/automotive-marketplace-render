# Database
DATABASE_URL="postgresql://username:password@localhost:5432/automotive"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here"

# Feature Flags (Progressive Scaling)
USE_REDIS="false"           # Enable when traffic increases
USE_ELASTICSEARCH="false"   # Enable when you have 500+ listings
USE_S3="false"             # Enable when you need more storage

# Limits for free tier
MAX_IMAGES_PER_LISTING="5"
LISTING_EXPIRY_DAYS="90"

# Redis (add when upgrading)
# REDIS_URL="redis://localhost:6379"

# AWS S3 (add when upgrading)
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="eu-central-1"
# AWS_BUCKET_NAME="automotive-images"

# Algolia (add when upgrading)
# ALGOLIA_APP_ID="your-app-id"
# ALGOLIA_API_KEY="your-api-key"
# ALGOLIA_INDEX_NAME="automotive_listings"

# Email (optional)
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT="587"
# SMTP_USER="apikey"
# SMTP_PASSWORD="your-sendgrid-api-key"

# Stripe (when ready for payments)
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."